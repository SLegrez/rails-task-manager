<body>
  <div class='container'><h1>My tasks</h1>
  <% @tasks.each do |task| %>
    <ul class="alert alert-primary" role="alert">
    <%= check_box("tag", tag.id) %>
    <%= link_to task.title, task_path(task) %>⚠️<%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></ul>
  <% end %>

  <p><%= link_to '⤵ Add a new task', tasks_new_path %></p>
  </div>
</body>
